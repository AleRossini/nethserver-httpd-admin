Summary: apache/mod_php stack for nethserver-manager
Name: nethserver-httpd-admin
Version: @@VERSION@@
Release: @@RELEASE@@ 
License: GPL
Source: %{name}-%{version}.tar.gz
URL: %{url_prefix}/%{name} 

BuildRequires: nethserver-devtools >= 1.0.0
BuildArch: noarch

Requires: httpd, php, mod_ssl, sudo
Requires: nethserver-php
Requires: nethserver-base
Requires: nethserver-nethgui

AutoReq: no

%description 
Runs an Apache instance on port 980 with SSL that serves
the nethserver-manager web application

%prep
%setup

%build
perl createlinks

%install
rm -rf $RPM_BUILD_ROOT
(cd root ; find . -depth -print | cpio -dump $RPM_BUILD_ROOT)
rm -f %{name}-%{version}-%{release}-filelist
%{genfilelist} $RPM_BUILD_ROOT \
    --dir /var/cache/nethserver-httpd-admin 'attr(0750,admin,admin)' \
    > %{name}-%{version}-%{release}-filelist
echo "%doc COPYING" >> %{name}-%{version}-%{release}-filelist

%files -f %{name}-%{version}-%{release}-filelist
%defattr(-,root,root)

%preun
# We must stop our daemon before init.d script is removed:
if [ $1 -eq 0 ]; then
    /sbin/service httpd-admin stop &>/dev/null || :
fi

