<VirtualHost *:{ $port; }>

   SSLEngine on
   RewriteEngine on
   DocumentRoot /usr/share/nethesis/nethserver-manager

   <Directory /usr/share/nethesis/nethserver-manager/>
       AllowOverride None
       Options +Indexes
       order deny,allow
       deny from all
       allow from all
       AddType application/x-httpd-php .php
       php_value session.save_path /var/cache/nethserver-httpd-admin
   </Directory>
</VirtualHost>

